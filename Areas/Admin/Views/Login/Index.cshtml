@model OnlineJewelleryShop.AdminMaster

@{
    ViewBag.Title = "Index";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ADMIN LOGIN</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/plugins/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/plugins/icheck-bootstrap/icheck-bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/dist/css/adminlte.min.css")">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="@Url.Action("Index", "Login")" class="h3"><b> ONLINE JEWELLERY SHOP</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form method="post">
                    <div class="input-group mb-3">
                        <input type="text" id="EmailId" class="form-control" placeholder="EmailID">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" id="Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <a href="@Url.Action("Index","Dashboard")" id="btnLogin" class="btn btn-primary">Sign In</a>
                        </div>
                    </div>
                </form>
                <p class="mb-1">
                    <a href="@Url.Action("Index","ChangePassword")">I forgot my password</a>
                </p>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/AdminTemplate/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/AdminTemplate/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/AdminTemplate/dist/js/adminlte.min.js")"></script>

    <script>
        $("#btnLogin").click(function (e) {
            e.preventDefault();

            var objLogin = {
                "Username": $("#EmailId").val(),
                "Password": $("#Password").val()
            }

            $.ajax({
                type: 'POST',
                url: '@Url.Action("Index", "Login")',
                data: { "objLogin": objLogin },
                success: function (data) {
                    window.location.href = "@Url.Action("Index", "Dashboard")";
                },
                error: function (data) {
                    console.log(data)
                }
            });
        })
    </script>
</body>
</html>
