@model List<OnlineJewelleryShop.CategoryMaster>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<a href="@Url.Action("Detail","Category")" class=" btn btn-primary ">Add New</a>
<div style="text-align: Center">
    <h3> <label>Category List</label></h3>
</div>
<table class=" table table-bordered " style=" margin-top: 1%;">
    <thead>
        <tr>
            <td>CategoryName</td>
            <td style="width: 15%;">Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                <a href="@Url.Action("Detail","Category")?ID=@item.Id" class="btn btn-info">Edit</a>
                <a href="@Url.Action("Delete","Category")?ID=@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>

