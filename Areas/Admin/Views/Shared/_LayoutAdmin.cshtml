<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ADMIN PANEL </title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/plugins/daterangepicker/daterangepicker.css")" />
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/plugins/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/AdminTemplate/dist/css/adminlte.min.css")">
    
    <script src="@Url.Content("~/AdminTemplate/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/AdminTemplate/plugins/bootstrap/js/bootstrap.min.js")"></script>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Login")" role="button">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-5">
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">OnlineJewelleryShop</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Dashboard")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>DASHBOARD</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Type")" class="nav-link">
                                <i class="nav-icon fas fa-ticket-alt"></i>
                                <p>PRODUCT TYPE</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Jewellery")" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>JEWELLERY MANAGEMENT</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Category")" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>CATEGORY MASTER</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("ForgotPassword", "ChangePassword")" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>CHANGE PASSWORD</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Login")" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>LOGOUT</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper p-3">
            @RenderBody()
        </div>

        <footer class="main-footer">
            
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">Admin</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="@Url.Content("~/AdminTemplate/plugins/daterangepicker/daterangepicker.js")"></script>
    <script src="@Url.Content("~/AdminTemplate/dist/js/adminlte.min.js")"></script>
    <script src="@Url.Content("~/AdminTemplate/dist/js/demo.js")"></script>
</body>
</html>
